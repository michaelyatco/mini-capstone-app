<p>Name: <%= @product.name %></p>
<p>Price: <%= number_to_currency(@product.price, unit: "Rupees", format: "%n %u") %></p>
<p>Images:</p>
<% @product.images.each do |image| %>
  <p> <img src = <%= image.url %>></p>
<% end %>
<p>Description: <%= @product.description %></p>
<p>Supplier: <%= @product.supplier.name %></p>
<%= link_to "Delete Product Please", "/products/#{@product.id}", method: :delete %>

<%= form_tag "/orders", method: :post do %>
  <div>
    <input type="text" name="quantity" value="number">
  </div>
  <div>
    <input type="submit" value="Buy Now!">
  </div>
<% end %>
