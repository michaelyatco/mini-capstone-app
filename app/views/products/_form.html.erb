<h1><%= header %></h1>
<% if @product.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
 
    <ul>
    <% @product.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_tag url, method: method_variable do %>

<div>
  <%= label_tag :name %> 
  <%= text_field_tag :name, @product.name %>
</div>

<div>
  Price:
  <input type="text" name="price" value="<%= @product.price %>">
</div>

<div>
  Image (Copy & paste the url):
  <input type="text" name="image" value="<%= @product.images.last %>">
</div>

<div>
  Description:
  <input type="text" name="description" value="<%= @product.description %>">
</div>

<div>
  Supplier ID:
  <!-- <input type="text" name="supplier_id" value="<%= @product.supplier_id %>"> -->
  <select name="supplier_id">
      <% Supplier.all.each do |supplier| %>
        <option value="<%= supplier.id %>" class="black_text"><%= supplier.name %></option>
      <% end %>
  </select>
</div>

<div>
  Amount:
  <input type="text" name="amount" value="<%= @product.amount %>">
</div>

<div>
  <input type="submit" name="Save product!">
</div>
<% end %>